@page "/mood-tracking"


<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link @(activeTab == 0 ? "active" : "")" @onclick="() => ActivateTab(0)">Active Moods</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(activeTab == 1 ? "active" : "")" @onclick="() => ActivateTab(1)">Create a Mood</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(activeTab == 2 ? "active" : "")" @onclick="() => ActivateTab(2)">Previous Moods</a>
    </li>
</ul>

<br />

@if(activeTab == 0)
{
    <div>
        <div class="card">
            <div class="card-body">
                Your daily moods.
            </div>
        </div>
    </div>
} else if (activeTab == 1)
{
    <div>
        <h3>Create a mood</h3>
        <CreateMoods />
    </div>
} else if(activeTab == 2)
{
    <div>
        <div class="card">
            <div class="card-body">
                All your submitted moods. PS: You cannot edit these moods, once submitted.
            </div>
        </div>
    </div>
}

@code {
    private int activeTab = 0;
    private void ActivateTab(int tab)
    {
        activeTab = tab;
    }

}
